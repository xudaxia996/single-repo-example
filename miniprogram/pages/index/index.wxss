  color: white;                         /*字体颜色*/
  border-radius: 98rpx; 
  font-size: 12px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.btn-class{
background-color:#6f93a7;
}

