/* ----------------------------------拓展页面的样式-------------------------------------  */

/* 侧边栏 */
.sidebar {
  background:rgb(182, 212, 226);       /*侧边栏背景颜色*/
  box-shadow: 4rpx 4rpx 12px rgba(0,0,0,.3);
  display: block;
  font-size: 16px;
  font-weight: 400;
  height: 100%;
  left: 0;
  position: fixed;
  overflow: auto;
  transform: translate(-600rpx,0);
  transition: transform .3s;
  top: 0;
  width: 350rpx;   /*侧边栏的宽度*/ 
  z-index: 100;
}
.sidebar.show {
  transform: translate(0,0);
}
.sidebar-shade {
  background: rgba(0,0,0,.3);
  display: none;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 99;
}

/* 侧边栏内的内容样式 */
.cate_Function{
  display: flex;
  flex-direction: column;
  align-items:center;
  margin-top: 50px;
}

.Button_style{
  width: 120px;
  margin-top: 20rpx;
